<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DepensesActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnDepensesFixes"
        android:layout_width="232dp"
        android:layout_height="240dp"
        android:layout_marginStart="89dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="90dp"
        android:backgroundTint="@color/red_balance"
        android:drawableTop="@drawable/ic_fixes"
        android:onClick="onDepensesFixe"
        android:paddingTop="40dp"
        android:paddingBottom="40dp"
        android:text="Mes Dépenses Fixes"
        android:textColor="@color/light_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnDepensesVariable"
        android:layout_width="232dp"
        android:layout_height="240dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="62dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="95dp"
        android:backgroundTint="@color/red_balance"
        android:drawableTop="@drawable/ic_variable"
        android:onClick="onDepensesVariable"
        android:paddingTop="40dp"
        android:paddingBottom="40dp"
        android:text="Mes Dépenses Variable"
        android:textColor="@color/light_grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnDepensesFixes" />
</androidx.constraintlayout.widget.ConstraintLayout>